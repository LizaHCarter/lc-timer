doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/style.css', rel='stylesheet')
    link(href='css/ionic.app.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_controller.js')
  body(ng-app='lc-timer')
    ion-pane
      ion-header-bar.bar-calm
        h1.title TMR
      ion-content(ng-controller='MainCtrl')
        h3#display {{minutes}}:{{seconds}}
        .minutes
          .title MIN
          .list
            .item.range.range-positive
              i.icon.ion-stop
              input(ng-model='minutes', type='range', name='minutes', min='0', max='60', value='0')
              i.ion-ios7-fastforward
        .seconds
          .title SEC
          .button-bar
            a.button(ng-click='addSecs(0)') :00
            a.button(ng-click='addSecs(5)') :05
            a.button(ng-click='addSecs(10)') :10
            a.button(ng-click='addSecs(15)') :15
          .button-bar
            a.button(ng-click='addSecs(20)') :20
            a.button(ng-click='addSecs(25)') :25
            a.button(ng-click='addSecs(30)') :30
            a.button(ng-click='addSecs(35)') :35
          .button-bar
            a.button(ng-click='addSecs(40)') :40
            a.button(ng-click='addSecs(45)') :45
            a.button(ng-click='addSecs(50)') :50
            a.button(ng-click='addSecs(55)') :55
        .button.button-block.button-balanced(ng-click='startTimer()') START
        .button.button-block.button-assertive(ng-click='endTimer()') RESET
